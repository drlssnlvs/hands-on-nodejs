{
  "name": "hands-on-nodejs",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --ignore node_modules src/index.ts",
    "lint": "ts-node-dev -r tsconfig-paths/register eslint --fix './src/**/*.ts' && prettier --write './src/**/*.ts'",
    "start": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "build": "tsc . -p"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "author": "Darlysson Alves <drlssnlvs@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "4.8.0",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.8",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "prisma": "^4.8.0",
    "redis": "^4.5.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/signale": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "hooks": "^0.3.2",
    "husky": "^8.0.2",
    "jest": "^27.5.1",
    "prettier": "^2.0.5",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
